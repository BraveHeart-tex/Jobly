{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Biome Check",
			"command": "biome check --write --organize-imports-enabled=true --no-errors-on-unmatched --config-path=biome.json",
			"type": "shell",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": ["$tsc-watch"],
			"group": "build",
			"label": "tsc: watch - tsconfig.json"
		}
	]
}
