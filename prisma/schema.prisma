datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model JobApplication {
  id                Int               @id @default(autoincrement())
  jobTitle          String
  companyName       String
  applicationStatus ApplicationStatus
  jobType           JobType
  location          String
  comments          String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  userId            String

  @@index([userId])
}

model SalaryEstimationDataset {
  id              Int    @id @default(autoincrement())
  jobTitle        String
  salary_estimate Int
  location        String
}

enum ApplicationStatus {
  PENDING
  REJECTED
  INTERVIEW
  OFFER
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  TEMPORARY
  VOLUNTEER
  INTERNSHIP
}
